{
    "solution": "${workspaceRoot}/MTL.sln",
    "variables": {
        "MSBUILD": "C:/Program Files (x86)/Microsoft Visual Studio/2019/BuildTools/MSBuild/Current/Bin/MSBuild.exe",
        "DEVENV": "C:/Program Files (x86)/Microsoft Visual Studio/2019/BuildTools/Common7/IDE/devenv.com",
        "xxINCLUDE": "../vcpkg/installed/x64-windows/include",
        "PATH" : "%PATH%;../vcpkg/installed/x64-windows/bin;../vcpkg/installed/x64-windows/debug/bin"
    },
    "buildConfigurations": [
        "Debug",
        "Release"
    ],
    "platformConfigurations": [
        "x64",
        "x86"
    ],
    "preBuildTasks": [
        {
            "name": "Print a message",
            "program": "cmd",
            "args": [ "/c", "echo [pre-build task]: MESSAGE" ],
            "cwd": "${workspaceRoot}"
        }
    ],
    "postBuildTasks": [
        {
            "name": "Print another message",
            "program": "cmd",
            "args": [ "/c", "echo [post-build task]: ${PATH} ANOTHER MESSAGE" ],
            "cwd": "${workspaceRoot}"
        }
    ],
    "debugConfigurations": [
        {
            "name": "test",
            "cwd": "${workspaceRoot}",
            "program": "cmd", 
            "args": [ "/V", "/C", "set PATH=${PATH}&& ${workspaceRoot}/x64/${buildConfig}/MTL.exe"]
        },
        {
            "name": "helloworld",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/examples/helloworld/helloworld/x64/${buildConfig}/helloworld.exe",
            "args": []
        },
        {
            "name": "Editor",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/examples/Editor/x64/${buildConfig}/Editor.exe",
            "args": []
        }
    ]
}